@page
@model QuizApp.Pages.Account.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password reset confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow animate-on-scroll">
                <div class="card-header bg-gradient-success text-white">
                    <h1 class="h4 mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h4>Password has been reset successfully!</h4>
                    <p class="mt-3">
                        Your password has been reset. You can now use your new password to log in.
                    </p>
                    <div class="mt-4">
                        <a asp-page="/Account/Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Log in
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>