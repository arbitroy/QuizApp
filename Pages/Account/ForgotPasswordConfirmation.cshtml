@page
@model QuizApp.Pages.Account.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow animate-on-scroll">
                <div class="card-header bg-gradient-success text-white">
                    <h1 class="h4 mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-envelope-check text-success" style="font-size: 4rem;"></i>
                    </div>
                    
                    <p>
                        Password reset link has been generated.
                    </p>
                    
                    @if (!string.IsNullOrEmpty(Model.ResetLink))
                    {
                        <div class="alert alert-warning">
                            <p><strong>Development Mode</strong>: In production, this link would be sent via email.</p>
                            <p>Your reset link:</p>
                            <a href="@Model.ResetLink">Click here to reset your password</a>
                        </div>
                    }
                    else
                    {
                        <p>Please check your email for a password reset link.</p>
                    }
                    
                    <p class="mt-3">
                        <a asp-page="/Account/Login" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-2"></i> Back to Login
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>